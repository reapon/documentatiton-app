@using DocumentationApp.ViewModel
@model IEnumerable<EditUserViewModel>

@{
    ViewBag.Title = "All Users";
}

<h3 class="text-center">All User Roles</h3>
<div class="container pt-5">
    <div class="text-center pt-2">
        <h2 class="badge badge-dark">All User Roles</h2>
    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <td>User Name</td>
                <td>User Email</td>
                <td>User Roles</td>
                <td>Action</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @foreach (var role in user.Roles)
                        {

                            <span class="badge badge-pill badge-info">@role </span>
                        }


                    </td>
                    <td>
                        <a asp-action="EditUser" asp-controller="Administration"
                           asp-route-id="@user.Id" class="btn btn-success btn-sm">Manage Role</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>

