@model DocumentationApp.Models.Content

@{

    //var version = ViewBag.Version;



    var menuId = ViewBag.MenuId;
    var versionNo = ViewBag.VersionNo;


}

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

@*<link href="~/js/simditor-2.3.28/site/assets/styles/simditor.css" rel="stylesheet" />*@


<h1>Change Version of the Content</h1>

<div class="container mt-5">
    <div class="text-center">
        <h4 class="badge badge-info">Content Version Change</h4>

    </div>

    <div class="row">
        <form asp-action="ChangeVersion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@menuId" asp-for="MenuID" />



            <div class="form-group">
                <label asp-for="VersionNo" class="control-label"></label>
                <input asp-for="VersionNo" value="@versionNo" class="form-control" />
                <span asp-validation-for="VersionNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContentBody" class="control-label"></label>
                <textarea asp-for="ContentBody" id="Content" class="form-control"> </textarea>
                <span asp-validation-for="ContentBody" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Change Version" class="btn btn-success" />
            </div>





        </form>
    </div>
</div>




